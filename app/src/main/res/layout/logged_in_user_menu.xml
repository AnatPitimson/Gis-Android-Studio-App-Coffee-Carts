<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/whitei"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:orientation="vertical">
    </LinearLayout>
    <TextView
        android:id="@+id/hello_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/a"
        android:gravity="center"
        android:text="Hello "
        android:textSize="37dp"
        android:textStyle="bold"></TextView>

    <Button
        android:id="@+id/mapBtn"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/button_design"
        android:fontFamily="@font/b"
        android:text="Map"
        android:textAllCaps="false"
        android:textSize="22dp"
        android:textStyle="bold" />


    <Button
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/cartsListBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:textAllCaps="false"
        android:layout_marginTop="320dp"
        android:background="@drawable/button_design"
        android:text="Carts List"
        android:fontFamily="@font/b"
        android:textStyle="bold"
        android:textSize="22dp"/>


    <Button
        android:id="@+id/addCartBtn"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="406dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/button_design"
        android:fontFamily="@font/b"
        android:text="Add Cart"
        android:textAllCaps="false"
        android:textSize="22dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="371dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/back_while_pressing" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="307dp"
        android:layout_marginBottom="680dp"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="23dp" />

</RelativeLayout>